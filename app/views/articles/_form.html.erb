<%= render 'shared/error', obj: @article %>

<div class="row">
	<div class="col-xs-12">
<%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>

<div class="form-group">
	<div class="control-label col-sm-2">
<%= f.label :title  %> 
</div>
<div class="col-sm-8">
<%= f.text_field :title, class: "form-control", placeholder: "Title of Article", autofocus: true %>
</div>
</div>
<div class="form-group">
	<div class="control-label col-sm-2">
<%= f.label :description  %> <br>
</div>
<div class="col-sm-8">
<%= f.text_area :description, rows: 8, class: "form-control", placeholder: "Desc of Article" %>
</div>
</div>
<div class="form-group">
	<div class="col-sm-offset-2 col-sm-10" style="text-align:left">
	<%= f.submit class: "btn btn-primary btn-lg" %>
</div>
</div>

<% end %>
<div class="col-xs-offset-4 col-xs-4">
[ <%= link_to "Back to article listing", articles_path %> ]
</div>
</div>
</div>